<div class="container">
	<% if (session.authenticated) { %>
	<div class="row">
		<div class="w12 wysiwyg">
			<h1>Trying to log in?</h1>
			<p>You're already signed in as <%= session.User.firstName %> <%= session.User.lastName %>.</p>
			<p>Not you? <a href="/logout">Log out</a></p>
		</div>
	</div>
	<% } else { %>
	<div class="row padded">
		<div class="w6 wysiwyg">
			<h1>Login</h1>
			<form action="/sessions/create" method="POST">
				<label for="userName">Username</label>
				<input type="text" name="userName" class="input breaker">
				<label for="password">Password</label>
				<input type="password" name="password" class="input breaker">
				<input type="hidden" name="_csrf" value="<%= _csrf %>">	
				<input class="cta-submit inline" type="submit" value="Login">
			</form>		
		</div>
		<div class="w6 last wysiwyg">
			<h2>Register</h2>
			<p>If you don't already have an account</p>
			<a href="/register" class="cta-submit inline">Get Started</a>
		</div>
	</div>
	<% } %>
</div>