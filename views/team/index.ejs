<div class="container spaced">
	<div class="row">
		<div class="w6 wysiwyg">
			<h1>Teams</h1>
		</div>
		<div class="w6 last">
			<ul class="nav-secondary">
				<li><a href="/create/team">Create Team <span class="icon plus"></a></li>
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="w12 wysiwyg">
			<h2>Find a team</h2>
			<form action="/search/teams" method="POST">
				<input type="text" id="findTeam" name="query">
			</form>
		</div>
	</div>
	<div class="row">
		<div class="w12">
			<div class="row">
				<% _.each(teams, function(team, i, teams) { %>
				<div class="w4 team-box<% if ((i+1) % 3 == 0) { %> last<% } %>">
					<p><a href="/teams/<%= team.id %>"><%= team.teamName %></a></p>
				</div>
				<% }) %>	
			</div>
		</div>	
	</div>
</div>