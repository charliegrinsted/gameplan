<% if (session.authenticated) { %>
<div class="container">
	<div class="row">
		<div class="w12">
			<h1>So you want to make a new team?</h1>
			<h2>Team Creation Form</h2>
			<form action="/teams/create" method="POST">
				<label for="teamName">Team Name</label>
				<input type="text" name="teamName">
				<label for="teamSport">Sport</label>
				<input type="text" name="teamSport">
				<input type="hidden" name="teamAdmin" value="<%= _csrf %>">
				<input type="hidden" name="_csrf" value="<%= _csrf %>">
				<input type="submit" value="Create team">
			</form>		
		</div>
	</div>
</div>
<% } %>