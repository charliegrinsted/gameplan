<div class="container med-slab">
	<div class="row">
		<div class="w12 user-bar">
			<% if (image != null) { %>
			<img class="profile-photo" src="data:image/jpg;base64, <%= image %>" alt="<%= user.firstName %> <%= user.lastName %>">
			<% } %>
			<h1><%= user.firstName %> <%= user.lastName %></h1>
			<% if (user.bio) { %>
			<p><%= user.bio %></p>
			<% } %>
		</div>
	</div>
</div>
<div class="container wysiwyg">
	<div class="row">
		<div class="w6">
			<h2><%= user.firstName %>'s Teams</h2>
			<% _.each(user.userTeams, function(team, i, teams) { %>
				<% if (i == 0) { %>
				<ul class="dash-list team">
				<% } %>
				<li>
					<a href="/teams/<%= team.id %>"><%= team.teamName %></a>
					<% if (session.User.id == user.id) { %>
					<a class="cta-submit negative" href="/teams/<%= team.id %>/leave">Leave</a>
		  			<a class="cta-submit" href="/teams/<%= team.id %>">View</a>
		  			<% } %>
					</li>
				<% if (i == teams.length ) { %>
				</ul>
				<% } %>	
			<% }) %>
		</div>
		<div class="w6 last">
			<h2><%= user.firstName %>'s Events</h2>
			<% _.each(user.eventsAttending, function(thisEvent, i, events) { %>
			<% if (i == 0) { %>
			<ul class="dash-list team">
			<% } %>
			<li>
				<a href="/events/<%= thisEvent.id %>"><%= thisEvent.eventTitle %></a>
				<% if (session.User.id == user.id) { %>
				<a class="cta-submit negative" href="/events/<%= thisEvent.id %>/cancel">Cancel</a>
				<a class="cta-submit" href="/events/<%= thisEvent.id %>">View</a>
	  			<% } %>
			</li>
			<% if (i == events.length ) { %>
			</ul>
			<% } %>				
			<% }) %>
		</div>
	</div>
</div>