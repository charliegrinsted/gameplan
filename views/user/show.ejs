<div class="container med-slab">
	<div class="row">
		<div class="w12 user-bar">
			<% if (image != null) { %>
			<img class="profile-photo" src="data:image/jpg;base64, <%= image %>" alt="<%= user.firstName %> <%= user.lastName %>">
			<% } %>
			<h1><%= user.firstName %> <%= user.lastName %></h1>
			<% if (user.bio) { %>
			<p><%= user.bio %></p>
			<% } %>
		</div>
	</div>
</div>
<div class="container wysiwyg">
	<div class="row">
		<div class="w6">
			<h2><%= user.firstName %> plays for...</h2>
			<% _.each(user.userTeams, function(team, i) { %>
			<h3><a href="/teams/<%= team.id %>"><%= team.teamName %></a></h3>
			<% }) %>
		</div>
		<div class="w6 last">
			<h2><%= user.firstName %> is going to...</h2>
			<% _.each(user.eventsAttending, function(thisEvent, i) { %>
			<h3><a href="/events/<%= thisEvent.id %>"><%= thisEvent.eventTitle %></a></h3>
			<% }) %>
		</div>
	</div>
	<% _.each(user.friends, function(friend, i, friends) { %>
	<% if (i == 0) { %>
	<div class="row">
		<div class="w12">
			<h2>Friends</h2>
			<% } %>
			<p><a href="/users/<%= friend.userName %>"><%= friend.firstName %> <%= friend.lastName %></a></p>
			<% if (i == friends.length - 1) { %>
		</div>
	</div>
	<% } %>
	<% }) %>	
</div>