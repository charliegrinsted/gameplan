<div class="container med-slab">
	<div class="row">
		<div class="w12 user-bar">
			<% if (image != null) { %>
			<img class="profile-photo" src="data:image/jpg;base64, <%= image %>" alt="<%= user.firstName %> <%= user.lastName %>">
			<% } %>
			<h1><%= user.firstName %> <%= user.lastName %></h1>
			<% if (user.bio) { %>
			<p><%= user.bio %></p>
			<% } %>
		</div>
	</div>
</div>
<div class="container wysiwyg">
	<div class="row">
		<div class="w6">
			<h2>Teams</h2>
			<% _.each(user.userTeams, function(team, i, teams) { %>
				<% if (i == 0) { %>
				<ul>
				<% } %>
				<li><a href="/teams/<%= team.id %>"><%= team.teamName %></a></li>
				<% if (i == teams.length ) { %>
				</ul>
				<% } %>	
			<% }) %>
		</div>
		<div class="w6 last">
			<h2>Events</h2>
			<% _.each(user.eventsAttending, function(thisEvent, i, events) { %>
			<% if (i == 0) { %>
			<ul>
			<% } %>
			<li><a href="/events/<%= thisEvent.id %>"><%= thisEvent.eventTitle %></a></li>
			<% if (i == events.length ) { %>
			</ul>
			<% } %>				
			<% }) %>
		</div>
	</div>
	<div class="row">
		<div class="w6">
			<h2>Friends</h2>
			<% if (user.friends.length == 0) { %><p><%= user.firstName %> has no friends to show</p><% } %>
			<% _.each(user.friends, function(friend, i, friends) { %>
				<% if (i == 0) { %>
				<ul>
				<% } %>
					<li><a href="/users/<%= friend.userName %>"><%= friend.firstName %> <%= friend.lastName %></a></li>
				<% if (i == friends.length) { %>
				</ul>
				<% } %>
			<% }) %>
		</div>
	</div>
</div>